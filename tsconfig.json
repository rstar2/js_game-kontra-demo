{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "lib": [
            "es2016",
            "dom"
        ],
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}